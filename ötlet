			cout << "A te karaktered az autó.\n\n";
			break;
		case 6:
			cout << "A te karaktered a szék.\n\n";
			break;
		case 7:
			cout << "A te karaktered a kép.\n\n";
			break;
		case 8:
			cout << "A te karaktered a motor.\n\n";
			break;
		case 9:
			cout << "A te karaktered az asztal.\n\n";
			break;
		case 10:
			cout << "A te karaktered a nyúl.\n\n";
			break;
		default:
			cout << "Nem létező számot adtál meg!!!\n\n\n";
			break;
	}
	
